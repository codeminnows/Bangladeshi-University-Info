<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/holo_orange_light"
    tools:context="com.wordpress.ishansaysjava.bangladeshiuniversityinfo.RegisterActivity">

    <GridLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:columnCount="2"
        >

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="fill_horizontal"
            android:layout_gravity="fill_horizontal"
            android:layout_columnSpan="2"
            android:layout_row="0"
            android:layout_column="0"
            android:hint="Write username"
            android:id="@+id/username"
            android:layout_marginBottom="10dp"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="fill_horizontal"
            android:layout_gravity="fill_horizontal"
            android:layout_columnSpan="2"
            android:layout_row="1"
            android:layout_column="0"
            android:hint="Write password"
            android:layout_marginBottom="10dp"
            android:id="@+id/password"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="fill_horizontal"
            android:layout_gravity="fill_horizontal"
            android:layout_row="2"
            android:layout_column="0"
            android:hint="HSC GPA"
            android:layout_marginBottom="10dp"
            android:id="@+id/res_ssc"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_gravity="left"
            android:layout_row="2"
            android:layout_column="1"
            android:hint="SSC GPA"
            android:layout_marginBottom="10dp"
            android:id="@+id/res_hsc"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:layout_gravity="fill_horizontal"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_marginBottom="10dp"
            android:text="Student type:"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:layout_gravity="left"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_marginBottom="10dp"
            android:id="@+id/type"
            android:entries="@array/type"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="fill_horizontal"
            android:layout_column="0"
            android:layout_row="4"
            android:layout_marginBottom="10dp"
            android:text="Group:"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:layout_gravity="left"
            android:layout_column="1"
            android:layout_row="4"
            android:layout_marginBottom="10dp"
            android:id="@+id/group"
            android:entries="@array/group"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="fill_horizontal"
            android:layout_gravity="fill_horizontal"
            android:layout_row="5"
            android:layout_column="0"
            android:hint="HSC year"
            android:layout_marginBottom="10dp"
            android:id="@+id/hsc_yr"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_gravity="fill_horizontal"
            android:layout_row="5"
            android:layout_column="1"
            android:hint="Blood group"
            android:layout_marginBottom="10dp"
            android:id="@+id/blood_grp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_columnSpan="2"
            android:layout_row="6"
            android:layout_column="0"
            android:text="Register"
            android:onClick="register"
            android:background="@android:color/holo_blue_light"
            />

    </GridLayout>
</ScrollView>


